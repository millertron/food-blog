<p id="alert"><%= alert %></p>
<h1>Edit my account</h1>

<%= form_for @user do |form| %>
  <% if current_user.status_registered? %>
    <h3>Please change your password</h3>
  <% end %>
  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit "Update details" %>
  </div>
<% end %>

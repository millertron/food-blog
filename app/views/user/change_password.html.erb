<p id="alert"><%= alert %></p>
<h1>My Account</h1>

<%= form_for @user do |form| %>
	<% if current_user.status_registered? %>
		<h3>Please change your password</h3>
	<% end %>
	<div class="field">
		<%= form.password_field :password %>
	</div>

	<div class="actions">
		<%= form.submit "Update details" %>
	</div>
<% end %>

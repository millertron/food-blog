<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @recipe.title %>
</p>

<p>
  <strong>Ingredients:</strong>
  <%= @recipe.ingredients %>
</p>

<p>
  <strong>Photo:</strong>
  <%= render partial: 'image_preview', locals: {image: @recipe.photo } %>
</p>

<p>Steps</p>
<% @recipe.recipe_steps.each do |step| %>
<p><%= step.order %></p>
<div>
  <p><%= step.text %></p>
  <p>
    <%= render partial: 'image_preview', locals: {image: step.photo} %>
  </p>
<div>
<% end %>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
